<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="#2888"
    android:paddingTop="50dp"
    android:paddingRight="10dp"
    android:paddingBottom="32dp"
    tools:ignore="RtlSymmetry"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/labelsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/cascade"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            >

            <TextView
                style="@style/aot_labels"
                android:text="@string/views"
                />

            <TextView
                style="@style/aot_labels"
                android:text="@string/rating_artistic"
                />

            <TextView
                style="@style/aot_labels"
                android:text="@string/rating_original"
                />

            <TextView
                style="@style/aot_labels"
                android:text="@string/rating_technic"
                />

            <TextView
                style="@style/aot_labels"
                android:text="@string/likes"
                />

            <TextView
                style="@style/aot_labels"
                android:text="@string/dislikes"
                />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/redBar"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/red"
            >

            <View
                android:id="@+id/greenBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/blue"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/views"
                style="@style/aot_values"
                tools:text="0"
                />

            <TextView
                android:id="@+id/aRate"
                style="@style/aot_values"
                tools:text="0"
                />

            <TextView
                android:id="@+id/oRate"
                style="@style/aot_values"
                tools:text="0"
                />

            <TextView
                android:id="@+id/tRate"
                style="@style/aot_values"
                tools:text="0"
                />

            <TextView
                android:id="@+id/lRate"
                style="@style/aot_values"
                tools:text="0"
                />

            <TextView
                android:id="@+id/dRate"
                style="@style/aot_values"
                tools:text="0"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/awardsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        >

    </LinearLayout>

</FrameLayout>