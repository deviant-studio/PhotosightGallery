<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/grey_light</item>
        <item name="colorSurface">@color/primary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="materialAlertDialogTheme">@style/DialogTheme</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:textColorLink">?colorSecondary</item>

    </style>

    <style name="AppTheme.BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:colorBackground">@color/grey_light</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">?android:colorBackground</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="shapeAppearanceLargeComponent">@style/BottomTabsShapeAppearance</item>
        <!--<item name="android:navigationBarDividerColor">?android:colorBackground</item>-->
    </style>

    <style name="AppTheme.Black" parent="AppTheme">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/translucent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="snackbarTextViewStyle">@style/SnackbarText</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:textColorLink">@color/accent</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomTabsShapeAppearance</item>
    </style>

    <style name="BottomTabsShapeAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <style name="MenuShape" parent="ShapeAppearance.MaterialComponents.Tooltip">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="IndeterminateLinearProgressIndicatorStyle" parent="Widget.MaterialComponents.ProgressIndicator.Linear.Indeterminate">
        <item name="indicatorColor">?colorSecondary</item>
    </style>

    <style name="aot_labels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/thin_font</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/ab_text</item>
    </style>

    <style name="aot_values">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/light_font</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="PhotoInfoText">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="SnackbarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/primary</item>
    </style>


</resources>