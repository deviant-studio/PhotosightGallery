<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.MySherlock" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/ab_button_selector</item>
        <item name="android:actionBarItemBackground">@drawable/ab_button_selector</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/tabs</item>
        <item name="colorPrimary">@color/tabs</item>
        <item name="colorAccent">@color/primary_text</item>

    </style>

    <style name="Theme.MySherlockBlack" parent="Theme.AppCompat">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorAccent">@color/primary_text</item>

    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBar.Title</item>
        <item name="subtitleTextStyle">@style/ActionBar.SubTitle</item>
        <item name="displayOptions">showTitle</item>
        <!-- remove shadow below action bar -->
        <item name="elevation">0dp</item>
    </style>

    <style name="ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ActionBar.SubTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>


    <style name="ListView" parent="android:Widget.ListView">
        <item name="android:divider">@color/list_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>


    <style name="aot_labels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/thin_font</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/ab_text</item>
    </style>

    <style name="aot_values">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/light_font</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TabStrip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="pstsIndicatorColor">@color/primary_text</item>
        <item name="pstsIndicatorHeight">4dp</item>
        <item name="pstsUnderlineColor">@color/primary_text</item>
        <item name="pstsUnderlineHeight">1dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <!--<item name="pstsTabBackground">@color/tabs</item>-->
        <item name="android:background">@color/tabs</item>
    </style>

    <style name="big_progress">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>