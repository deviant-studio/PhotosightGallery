<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/background_selected">
     <item android:id="@android:id/mask">
         <shape>
             <solid android:color="#000" />
         </shape>
     </item>

    <item>
        <selector>
            <item android:drawable="@color/background_selected" android:state_selected="true" />
            <item android:drawable="@color/background_selected" android:state_activated="true" />
            <item android:drawable="@color/background_selected" android:state_checked="true" />
            <item android:drawable="@android:color/transparent" />
        </selector>
    </item>
</ripple>